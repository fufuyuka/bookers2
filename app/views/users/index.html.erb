<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', user: current_user, newbook: @newbook %>
    </div>
      <!-- 自分のinfo｜ユーザーの一覧 -->
    <div class="col-md-8 offset-md-1">
      <h2>Uses</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspen="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
      </table>
    </div>
    
  </div>
</div>
