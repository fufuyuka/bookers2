<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>
<div class="row">
  <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog"></i><% end %>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model: newbook do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, class:"book_title form-control", id:"book_title" %>
  </div>
  <div class="form-group">
    <label>Opinion</label>
    <%= f.text_area :body, class:"book_body form-control", id:"book_body" %>
  </div>
  <div  class="form-group">
    <%= f.submit 'Create Book', class:"btn btn-success" %>
  </div>
<% end %>