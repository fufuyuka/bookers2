<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>
<div>
  <%= link_to edit_user_path(user) do %><i class="fas fa-user-cog"></i><% end %>
</div>

<h2>New book</h2>
  <%= form_with model: newbook do |f| %>
  <div>
    <label>Title</label><br />
      <%= f.text_field :title %>
  </div>
  <div>
    <label>Opinion</label><br />
      <%= f.text_area :body %>
  </div>
    <%= f.submit 'Create Book' %>
  <% end %>