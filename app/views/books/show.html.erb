<div>
  <%= flash[:notice] %>
</div>

<%= render 'users/user_info', user: @book.user, newbook: @newbook %>

<!-- :idのユーザーのインフォ｜ブックの詳細(自分なら編集ボタン表示) -->

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td><%= image_tag @book.user.get_profile_image(100,100) %><br />
        <%= link_to @book.user.name, user_path(@book.user) %></td>
      <td><%= link_to @book.title, book_path(@book) %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path %></td>
        <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消してしまいますか？" %></td>
      <% end %>
    </tr>
  </tbody>
</teble>
