<%= render 'users/user_info', user: current_user %>
<%= render 'new_book', newbook: @newbook %>
<!-- 自分インフォ｜ブック一覧 -->

<h1>Books</h1>

<h4>Title</h4>
<h4>Opinion</h4>

<% @books.each do |book| %>
<div>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <p><%= link_to book.user.name, user_path(book.user) %></p>
  <p><%= link_to book.title, book_path(book) %></p>
  <p><%= book.body %></p>
</div>
<% end %>
